<% if(theme.scheme === 'Paradox') { %>
    <!-- Paradox Post Header -->
    <% if(!page.thumbnail) { %>
        <% if(!theme.thumbnail.purecolor) {%>
            <!-- Random Thumbnail -->
            <div class="post_thumbnail-random mdl-card__media mdl-color-text--grey-50" style="display:none;">
            <%- partial('_partial/Paradox-post-thumbnail') %>
        <% } else { %>
            <!-- Pure Thumbnail -->
            <div class="post_thumbnail-pure mdl-card__media mdl-color-text--grey-50" style="display:none;background-color:<%= theme.thumbnail.purecolor %> !important">
        <% } %>
    <% }else{ %>
        <!-- Custom Thumbnail -->
        <div class="post_thumbnail-custom mdl-card__media mdl-color-text--grey-50 mdl-shadow--4dp" style="margin:0 6px;background-image:url(<%- page.thumbnail %>);font-family:'Iosevka', 'PingFang SC', 'Microsoft YaHei', 'sans-serif';padding:0px;">
    <% } %>

			<div class="article-headline-p mdl-supporting__text mdl-color-text--grey-50" style="line-height:40px;padding:12px 16px;background-color:#969696;background-color:rgba(46,46,46,0.5);no-repeat;width:100%;font-size: 1.4rem;font-family:'Iosevka', 'PingFang SC', 'Microsoft YaHei', 'sans-serif'">
				<div><%= page.title %></div>
				<div style="font-size: 1.1rem;line-height:20px;"><i class="fa fa-clock"></i>&nbsp<%=date(page.date, 'YYYY-MM-DD') %>&nbsp&nbsp
			        <span class="page-category">
					<i class="fa fa-bookmark"></i>
	                  <%- list_categories(page.categories, {
	                      show_count: false,
	                      class: 'sidebar_archives',
	                      style: 'none'
	                  }) %>&nbsp&nbsp
					</span>
					<% if(page.tags && page.tags.length) {%>
				        <span class="page-tag">
							<i class="fa fa-tag"></i>
							<span>
								<%- list_tags(page.tags, {show_count: false}) %>
							</span>
						</span>
					<% }%>
				</div>
			</div>
        </div>
<% } %>

<% if(theme.scheme === 'Isolation') { %>
    <!-- Isolation Post Header -->
    <!-- Post thumbnail -->
    <% if(!page.thumbnail) { %>
        <!-- Post Header Info -->
        <div class="post-header_info without-thumbnail">
            <!-- Author Avatar & Name -->
            <img src="<%= url_for(theme.img.avatar) %>" class="avatar-img" width="44px" height="44px" alt="<%= config.author %>'s avatar">
            <span class="name-span"><%= config.author %></span>
        </div>

        <!-- Null Thumbnail -->
        <div class="post_thumbnail-null">
    <% } else { %>
        <!-- Post Header Info -->
        <div class="post-header_info with-thumbnail">
            <!-- Author Avatar & Name -->
            <img src="<%= url_for(theme.img.avatar) %>" class="avatar-img" width="44px" height="44px" alt="<%= config.author %>'s avatar">
            <span class="name-span"><%= config.author %></span>
        </div>

        <!-- Custom thumbnail -->
        <div class="post_thumbnail-custom">
            <img src="<%= page.thumbnail %>">
    <% } %>
        </div>
<% } %>
